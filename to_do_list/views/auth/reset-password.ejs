<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
        <title>Forgot Password</title>
        <link rel="stylesheet" href="../../public/css/auth/forgotmypassword.css">
</head>

<body>
    <div class="forgot-password-card">
        <h4 class="text-center mb-4">Şifremi Unuttum</h4>
        <form method="post">
            <% if (typeof message!="undefined") { %>
                <div class="alert alert-danger" role="alert">
                    <%= message %>
                  </div>
            <% } %>
                <div class="mb-3">
                    <label for="password" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="ornek@gmail.com" required>
                </div>
                <div class="mb-3">
                    <label for="confpassword" class="form-label">Şifre Onay</label>
                    <input type="password" class="form-control" id="confpassword" name="confpassword" placeholder="ornek@gmail.com" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Şifre Sıfırla</button>
        </form>
        <div class="mt-3 text-center">
            <a href="/login" class="text-decoration-none text-primary">Giriş Yap</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>